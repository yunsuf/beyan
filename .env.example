# Beyan Document Digitization System - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_USER=admin
N8N_PASSWORD=secure_password_here
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_URL=http://localhost:5678/

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=beyan_user
POSTGRES_PASSWORD=secure_db_password_here
POSTGRES_DB=beyan_documents

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=secure_redis_password_here

# =============================================================================
# AI Services Configuration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# Kimi-VL Configuration
DEVICE=auto  # auto, cpu, cuda, cuda:0, etc.
MAX_BATCH_SIZE=4

# =============================================================================
# System Configuration
# =============================================================================
TIMEZONE=UTC
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# Monitoring (Optional)
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# Production Settings (Optional)
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DOMAIN_NAME=your-domain.com

# =============================================================================
# Security Settings
# =============================================================================
# JWT_SECRET=your_jwt_secret_here
# API_KEY=your_api_key_here
