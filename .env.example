# Beyan Document Digitization System - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Processing Mode
# =============================================================================
# Set the processing mode. Options: "local" or "openrouter"
PROCESSING_MODE=openrouter

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_USER=admin
N8N_PASSWORD=secure_password_here
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_URL=http://localhost:5678/

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=beyan_user
POSTGRES_PASSWORD=secure_db_password_here
POSTGRES_DB=beyan_documents

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=secure_redis_password_here

# =============================================================================
# AI Services Configuration
# =============================================================================
# OpenAI (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter (Recommended)
OPENROUTER_API_KEY=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
OPENROUTER_MODEL_NAME="google/gemini-flash-1.5"

# Local Model Configuration (Legacy)
DEVICE=auto  # auto, cpu, cuda, cuda:0, etc.
MAX_BATCH_SIZE=4

# =============================================================================
# System Configuration
# =============================================================================
TIMEZONE=UTC
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# Monitoring (Optional)
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# LangSmith Observability (Optional, for Hybrid LangGraph Orchestrator)
# =============================================================================
# Enable tracing and set API key and project name to use LangSmith
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=beyan
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# Smart Router (Optional)
# =============================================================================
# Budget for routing decisions: low | medium | high
ROUTING_BUDGET=low
# Force local-only routing (no external models)
OFFLINE_MODE=false

# =============================================================================
# Production Settings (Optional)
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DOMAIN_NAME=your-domain.com

# =============================================================================
# Security Settings
# =============================================================================
# JWT_SECRET=your_jwt_secret_here
# API_KEY=your_api_key_here
